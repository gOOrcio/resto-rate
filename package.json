{
	"name": "resto-rate",
	"private": true,
	"scripts": {
		"build": "nx run-many -t build",
		"dev": "nx run-many -t dev",
		"dev:api": "nx run api:dev",
		"dev:web": "nx run web:dev",
		"lint": "nx run-many -t lint",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,svelte,json,md,css}\"",
		"check-types": "nx run-many -t check-types",
		"test": "nx run-many -t test",
		"test:affected": "nx affected -t test",
		"build:affected": "nx affected -t build",
		"lint:affected": "nx affected -t lint",
		"check-types:affected": "nx affected -t check-types",
		"graph": "nx graph",
		"show": "nx show projects",
		"reset": "nx reset",
		"sync": "nx sync",
		"migrate": "nx migrate",
		"repair": "nx repair",
		"report": "nx report",
		"install:all": "bun install",
		"clean:nx": "rm -rf .nx/cache .nx/workspace-data"
	},
	"devDependencies": {
		"@nx-go/nx-go": "^3.3.1",
		"@nx/eslint": "^21.3.5",
		"@nx/playwright": "^21.3.5",
		"@nx/vite": "^21.3.5",
		"eslint": "^9.29.0",
		"npm-check-updates": "^18.0.1",
		"nx": "21.2.1",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.2.18",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {
		"dotenv": "^16.5.0"
	},
	"trustedDependencies": [
		"@tailwindcss/oxide",
		"esbuild",
		"nx",
		"web"
	]
}
